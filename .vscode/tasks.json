{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Build",
         "type": "typescript",
         "tsconfig": "tsconfig.json",
         "problemMatcher": ["$tsc"],
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "Publish",
         "command": "npm",
         "args": ["publish"],
         "type": "shell",
         "group": "none",
         "problemMatcher": []
      },
      {
         "label": "Link local copy to global",
         "command": "npm",
         "args": ["link"],
         "type": "shell",
         "group": "none",
         "problemMatcher": []
      },
      {
         "label": "Unlink",
         "command": "npm",
         "args": ["unlink"],
         "type": "shell",
         "group": "none",
         "problemMatcher": []
      }
   ]
}
